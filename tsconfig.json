{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["src/types", "./node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["src","src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}